            echo '<div id = "form-node">' . $this->translate('company') . ': <b>' . $this->form['parentNode']->nodeName . '</b></div>';
        echo '<div id = "form-node">' . $this->translate('deptmnt') . ': <b>' . $this->form['node']->nodeName . '</b></div>';
        echo '<div id = "form-user">' . $this->translate('owner') . ': <b>' . $this->form['owner']->userName . '</b></div>';
